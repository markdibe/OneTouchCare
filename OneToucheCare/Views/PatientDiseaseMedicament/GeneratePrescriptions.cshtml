@model IEnumerable<OneToucheCare.Models.PatientDiseaseMedicaments>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GeneratePrescriptions</title>
    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/jquery.min.js"></script>
    <script src="~/lib/bootstrap/popper.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    <link href="~/lib/Jquery datatable/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/Jquery datatable/jquery.dataTables.min.js"></script>
    <link href="~/lib/Jquery datatable/responsive.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/Jquery datatable/dataTables.responsive.min.js"></script>
    <link href="~/css/printing.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="card">
                <div class="card-header bg-default text-white text-center">
                    <img src="~/images/MLH-Website-Logo-v2.png" />
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Medicament.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Dose)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TimesPerDay)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateStart)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateFinish)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PatientDisease)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Medicament.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dose)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimesPerDay)
                                    </td>
                                    <td>
                                        @{
                                            string SelectedDate = "";
                                            if (item.DateStart != null)
                                            {
                                                SelectedDate = item.DateStart.Value.Date.ToString("d");
                                            }
                                        }
                                        @SelectedDate
                                    </td>
                                    <td>
                                        @{
                                            string thisDate = "";
                                            if (item.DateFinish != null)
                                            {
                                                thisDate = item.DateFinish.Value.Date.ToString("d");
                                            }
                                        }
                                        @thisDate
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.PatientDisease.PatientDiseaseId)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <label class="float-right">
                        @ViewData["DoctorName"].ToString()
                    </label>
                    <br />
                </div>
                <a class="btn btn-success text-white" onclick="OpenBrowser()" id="btnPrint">
                    Print
                </a>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function OpenBrowser() {
            $("#btnPrint").hide();
            window.print();
        }
    </script>

</body>
</html>
