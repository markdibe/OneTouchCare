<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8" />

    <title>@ViewData["Title"] - OneToucheCare</title>
    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/jquery.min.js"></script>
    <script src="~/lib/bootstrap/popper.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    <link href="~/lib/Jquery datatable/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/Jquery datatable/jquery.dataTables.min.js"></script>
    <link href="~/lib/Jquery datatable/responsive.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/Jquery datatable/dataTables.responsive.min.js"></script>
    <link href="~/lib/font-awesome/all.min.css" rel="stylesheet" />
    <script src="~/lib/font-awesome/all.min.js"></script>
</head>
<body>
    <script src="~/js/site.min.js"></script>
    <div class="container-fluid">


        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Admin</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Contact" asp-controller="Home">Contact<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Accounts
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="Account" asp-action="Create">Create Account</a>
                            <a class="dropdown-item" asp-action="ListOfAccounts" asp-controller="Account">List Of Accounts</a>

                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Disabled</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" asp-action="Index" asp-controller="Countries">Counties</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer fixed-bottom">
            <p>&copy; 2019 - OneToucheCare</p>
        </footer>
    </div>


    <script src="~/js/site.min.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
