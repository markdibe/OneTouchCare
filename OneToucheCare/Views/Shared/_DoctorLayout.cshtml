
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_DoctorLayout</title>
    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/jquery.min.js"></script>
    <script src="~/lib/bootstrap/popper.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    <link href="~/lib/Jquery datatable/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/Jquery datatable/jquery.dataTables.min.js"></script>
    <link href="~/lib/Jquery datatable/responsive.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/Jquery datatable/dataTables.responsive.min.js"></script>
    <link href="~/lib/font-awesome/all.min.css" rel="stylesheet" />
    <script src="~/lib/font-awesome/all.min.js"></script>
    <link href="~/lib/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
</head>
<body>
    <script src="~/js/MyLib.js"></script>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Doctors</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
   
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Create" asp-controller="Patients">Patients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Doctor_Create" asp-controller="tests">tests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="DoctorDetails" asp-controller="Doctors">Account Details</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer fixed-bottom">
            <p class="text-center">&copy; 2019 - OneToucheCare</p>
        </footer>
    </div>


    <script src="~/js/site.min.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
