@model OneToucheCare.Models.PatientSurgeries

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
<div class="card">
    <div class="card-header bg-danger text-white text-center">
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.SurgeryName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SurgeryName)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.SurgeryDescription)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SurgeryDescription)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.SurgeryResult)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SurgeryResult)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SurgeryDate)
            </dt>
            <hr />
            <dd>
                @Html.DisplayFor(model => model.SurgeryDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SurgeryType)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SurgeryType.SurgeryTypeId)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.Doctor)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Doctor.FirstName)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.Patient)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Patient.FirstName)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.DoctorName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DoctorName)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="ConfirmDelete">
            <input type="hidden" asp-for="SurgeryId" />
            <input type="submit" value="Delete" class="btn btn-danger text-white" />
            <a asp-action="create" asp-controller="PatientSurgeries" asp-route-id="@Model.PatientId">Back to List</a>
        </form>
    </div>
</div>